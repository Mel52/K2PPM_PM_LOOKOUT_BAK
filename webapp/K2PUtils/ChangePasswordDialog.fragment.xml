<Dialog
	xmlns="sap.m" title="XML Fragment Dialog">
	<Text
		xmlns="sap.m" text="Old Password" id="text1" class="sapUiResponsiveMargin"/>
		<Input id="inpPassword" valueLiveUpdate="true" width="auto" enabled="true" type="Password" value="{local>/oldPassword}"/>
		<Text
			xmlns="sap.m" text="New Password" id="text1" class="sapUiResponsiveMargin"/>
			<Input id="inpPassword" valueLiveUpdate="true" width="auto" enabled="true" type="Password" value="{local>/newPassword}"/>
			<Text
				xmlns="sap.m" text="Confirm Password" id="text1" class="sapUiResponsiveMargin"/>
				<Input id="inpPassword" valueLiveUpdate="true" width="auto" enabled="true" type="Password" value="{local>/newPassword2}"/>
				<buttons>
					<Button id="changePassword" text="OK" press="changePassword"/>
				</buttons>
				<buttons>
					<Button id="cancelPassword" text="Cancel" press="cancelPassword"/>
				</buttons>
			</Dialog>